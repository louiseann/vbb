<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<fx:root type="javafx.scene.layout.StackPane" xmlns:fx="http://javafx.com/javafx" alignment="TOP_CENTER">
    <Rectangle fx:id="box" width="24" height="45" styleClass="switch_toggle_box"/>
    <StackPane alignment="TOP_CENTER">
        <VBox spacing="5" alignment="CENTER">
            <Label text="OFF" styleClass="switch_state"/>
            <Label text="ON" styleClass="switch_state"/>
        </VBox>
        <Rectangle fx:id="toggleHandle" width="24" height="20" styleClass="switch_toggle"
                   mouseTransparent="true"/>
    </StackPane>
</fx:root>