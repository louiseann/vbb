<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.ColumnConstraints?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.TextFlow?>
<?import javafx.scene.text.Text?>
<VBox xmlns:fx="http://javafx.com/javafx"
      id="tt_generator_area" stylesheets="/vbb/views/css/truth_table_generator_style.css">
    <StackPane>
        <Rectangle id="title_bar" width="440" height="30"/>
        <Label text="TRUTH TABLE GENERATOR" id="title"/>
    </StackPane>
    <GridPane styleClass="calc_like_interface">

        <rowConstraints>
            <RowConstraints minHeight="30" maxHeight="30" vgrow="NEVER"/>
            <RowConstraints minHeight="30" maxHeight="30" vgrow="NEVER"/>
            <RowConstraints minHeight="30" maxHeight="30" vgrow="NEVER"/>
            <RowConstraints minHeight="30" maxHeight="30" vgrow="NEVER"/>
            <RowConstraints minHeight="30" maxHeight="30" vgrow="NEVER"/>
        </rowConstraints>

        <columnConstraints>
            <ColumnConstraints minWidth="57" maxWidth="57" hgrow="NEVER"/>
            <ColumnConstraints  minWidth="57" maxWidth="57" hgrow="NEVER"/>
            <ColumnConstraints minWidth="57" maxWidth="57" hgrow="NEVER"/>
            <ColumnConstraints minWidth="57" maxWidth="57" hgrow="NEVER"/>
            <ColumnConstraints minWidth="57" maxWidth="57" hgrow="NEVER"/>
            <ColumnConstraints minWidth="57" maxWidth="57" hgrow="NEVER"/>
        </columnConstraints>

        <TextField GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.rowSpan="2" GridPane.columnSpan="6"
                   GridPane.fillHeight="true" GridPane.fillWidth="true"
                   editable="false"
                   id="exp_field"/>

        <Button text="A (new id)"
                GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2"
                GridPane.fillHeight="true" GridPane.fillWidth="true"
                styleClass="button_op">
        </Button>
        <Button text="(group exp)"
                GridPane.rowIndex="2" GridPane.columnIndex="2" GridPane.columnSpan="2"
                GridPane.fillHeight="true" GridPane.fillWidth="true"
                styleClass="button_op"/>
        <Button text="C"
                GridPane.rowIndex="2" GridPane.columnIndex="4"
                GridPane.fillHeight="true" GridPane.fillWidth="true"
                styleClass="button_erase"/>
        <Button text="back"
                GridPane.rowIndex="2" GridPane.columnIndex="5"
                GridPane.fillHeight="true" GridPane.fillWidth="true"
                styleClass="button_erase"/>

        <Button text="AND"
                GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2"
                GridPane.fillHeight="true" GridPane.fillWidth="true"
                styleClass="button_op"/>
        <Button text="OR"
                GridPane.rowIndex="3" GridPane.columnIndex="2" GridPane.columnSpan="2"
                GridPane.fillHeight="true" GridPane.fillWidth="true"
                styleClass="button_op"/>
        <Button text="NOT"
                GridPane.rowIndex="3" GridPane.columnIndex="4" GridPane.columnSpan="2"
                GridPane.fillHeight="true" GridPane.fillWidth="true"
                styleClass="button_op"/>

        <Button text="NAND"
                GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2"
                GridPane.fillHeight="true" GridPane.fillWidth="true"
                styleClass="button_op"/>
        <Button text="NOR"
                GridPane.rowIndex="4" GridPane.columnIndex="2" GridPane.columnSpan="2"
                GridPane.fillHeight="true" GridPane.fillWidth="true"
                styleClass="button_op"/>

        <Button text="XOR"
                GridPane.rowIndex="5" GridPane.columnIndex="0" GridPane.columnSpan="2"
                GridPane.fillHeight="true" GridPane.fillWidth="true"
                styleClass="button_op"/>
        <Button text="XNOR"
                GridPane.rowIndex="5" GridPane.columnIndex="2" GridPane.columnSpan="2"
                GridPane.fillHeight="true" GridPane.fillWidth="true"
                styleClass="button_op"/>

        <Button text="Generate&#10;Truth Table"
                GridPane.rowIndex="4" GridPane.columnIndex="4"
                GridPane.rowSpan="2" GridPane.columnSpan="2"
                GridPane.fillHeight="true" GridPane.fillWidth="true"
                id="button_generate"/>
    </GridPane>
</VBox>
